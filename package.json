{
    "name": "drewclark.io-portfolio",
    "version": "1.0.0",
    "scripts": {
        "dev": "concurrently \"npm run api\" \"npm run frontend\"",
        "api": "node scripts/start-api-server.js",
        "frontend": "cd app && npm run dev",
        "build": "cd app && npm run build",
        "start": "node server.js",
        "test": "cd api && npm test && cd ../app && npm test -- --passWithNoTests",
        "setup": "npm install && cd app && npm install && cd ../api && npm install",
        "clean": "rimraf node_modules app/node_modules api/node_modules",
        "lint": "eslint . --ext .js,.jsx",
        "lint:fix": "eslint . --ext .js,.jsx --fix",
        "verify": "node scripts/verify-openai.js",
        "postinstall": "node scripts/permissions.js"
    },
    "dependencies": {
        "@qdrant/js-client-rest": "^1.13.0",
        "compression": "^1.7.4",
        "concurrently": "^8.2.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "openai": "^4.93.0",
        "rimraf": "^6.0.1",
        "simple-git": "^3.27.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.27.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "kill-port": "^2.0.1",
        "nodemon": "^3.0.3",
        "npm-run-all": "^4.1.5"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
